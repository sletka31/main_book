/* Напишите скрипт, который будет преобразовывать температуру из градусов Цельсия в градусы Фарингейта. Для этого сделайте инпут и кнопку */



<form action="" method="GET">
  <p>Введіть значення температури в градусах Цельсія:</p>
  <input 
    name="temp"
  >
  <input type="submit">
</form>
<?php
  if (!empty ($_GET)) {
    $tc = $_GET['temp'];
    $tf = (9/5) * $tc +32;
    echo 'Температура = ' . $tf . ' градусів Фарингейта'; 
  }
?>



