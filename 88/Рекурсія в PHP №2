/*Дан массив:

<?php
	$arr = ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4, 'e' => 5];
?>
С помощью рекурсии найдите сумму элементов этого массива.*/



<?php
$arr = ['a' => 1, 'b' => 2, 'c' => 3, 'd' => 4, 'e' => 5];
function func ($arr, &$sum) {
    if (count($arr) !== 0) {
        $keys = array_keys($arr);    
        $sum += $arr[$keys[0]];
        array_shift($arr);
        func ($arr, $sum);
    }
}

$sum = 0;
func($arr,$sum);

echo $sum;
