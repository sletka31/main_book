/*Пусть вам нужно проверить, что в строке есть дробное число. Используя предложенный скрипт, проверьте вашу регулярку на различных строках.*/



<?php
	$reg   = '#\d\..#'; 
	
	$arr[] = 'aaa 12.3 bbb';   // 1
	$arr[] = 'aaa 12.345 bbb'; // 1
	$arr[] = 'aaa 12x bbb';   // 0
	$arr[] = 'aaa 12 bbb';    // 0
	
	foreach ($arr as $str) {
		echo $str . ' ' . preg_match($reg, $str) . '<br>';
  }
