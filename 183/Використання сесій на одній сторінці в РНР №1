/* Запишите в сессию время захода пользователя на сайт. При обновлении страницы выводите сколько секунд назад пользователь зашел на сайт.*/


<?php
	session_start();
	if (!isset($_SESSION['t'])) {
	  $_SESSION['t'] = time (); 
	} else {
	  $t1=$_SESSION['t'];
	  $t2 = time ();
	  echo $t2 - $t1;
	}		
?>
