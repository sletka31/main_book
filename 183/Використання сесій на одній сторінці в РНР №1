/* Запишите в сессию время захода пользователя на сайт. При обновлении страницы выводите сколько секунд назад пользователь зашел на сайт.*/

<?php
	session_start();
	if (!isset($_SESSION['t'])) {
	  $_SESSION['t'] = date ('H:i:s'); 
	} else {
	  $t1=$_SESSION['t'];
	  $t12= explode(':', $t1);
	  $t2 = date ('H:i:s');
	  $t22= explode(':', $t2);
	
	    echo ((($t22[0]*360)+($t22[1]*60)+$t22[2]) - (($t12[0]*360)+($t12[1]*60)+$t12[2]));
        }
		
?>
