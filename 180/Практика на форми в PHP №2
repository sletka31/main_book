/* Напишите скрипт, который будет считать факториал числа. Само число вводится в инпут и после нажатия на кнопку пользователь должен увидеть результат. */


<form action="" method="GET">
  <p>Введіть число:</p>
  <input 
    name="number"
  >
  <input type="submit">
</form>
<?php
  if (!empty ($_GET)) {
    $n = $_GET['number'];
    $f = 1;

    for ($i = 1; $i <= $n; $i++) {
    $f *= $i;
  }
 
    echo 'Факторіал числа ' . $n . ' = ' . $f; 
  }
?>
